import 'dart:typed_data';

import 'dart:ui';

import 'package:umbra_flutter/umbra_flutter.dart';

/// {@template simple}
/// A Dart Shader class for the `simple` shader.
/// {@endtemplate}
class Simple extends UmbraShader {
  Simple._(
    Image texture,
  ) : super(
          _cachedProgram!,
          floatUniforms: [],
          samplers: [
            texture,
          ],
        );

  /// {@macro simple}
  static Future<Simple> compile(
    Image texture,
  ) async {
    // Caching the program on the first compile call.
    _cachedProgram ??= await FragmentProgram.compile(
      spirv: ByteData.sublistView(Uint8List.fromList(_binary)).buffer,
    );

    return Simple._(
      texture,
    );
  }

  static FragmentProgram? _cachedProgram;
}

const _binary = <int>[];
