#version 320 es

precision mediump float;

layout (location = 0) out vec4 COLOR;

layout (location = 0) uniform vec2 position;
layout (location = 1) uniform vec3 coordinates;
layout (location = 2) uniform vec4 color;
layout (location = 3) uniform float mix_value;
layout (location = 4) uniform sampler2D image;
layout (location = 5) uniform vec2 resolution;
layout (location = 6) uniform sampler2D TEXTURE;

void fragment(sample2D TEXTURE, vec2 UV) {
    COLOR = texture(TEXTURE, UV);
}

void main()
{
    vec2 UV = gl_FragCoord.xy / resolution.xy;

    fragment(TEXTURE, UV);
}